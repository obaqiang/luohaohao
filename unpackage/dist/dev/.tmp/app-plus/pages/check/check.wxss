
.mes_area {
	padding-top: 50rpx;
}
.mes_list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 750rpx;
	line-height: 40rpx;
	font-size: 25rpx;
}
.mes_list text:nth-child(1) {
	width: 200rpx;
	text-align: right;
}
.mes_list text:nth-child(2) {
	padding-left: 60rpx;
}
.bg_line {
	height: 20rpx;
	background: #e7e7ed;
	margin-top: 50rpx;
}
.body_list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	line-height: 60rpx;
	padding-left: 30rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-top: 20rpx;
	font-size: 25rpx;
}
.text_a {
	width: 150rpx;
	text-align: right;
	font-size: 25rpx;
}
.text_b {
	padding-left: 50rpx;
}
.text_right_area {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border: 1rpx solid #DDDDDD;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding: 10rpx;
	margin-left: 10rpx;
	border-radius: 10rpx;
	width: 300rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	font-size: 20rpx;
}
.text_right_area_hover {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	border: 1rpx solid #ffb700;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding: 10rpx;
	margin-left: 10rpx;
	border-radius: 10rpx;
	width: 500rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}

